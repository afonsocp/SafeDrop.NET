@page
@model EmergencyManagementAPI.Pages.Alertas.DeleteModel

@{
    ViewData["Title"] = "Excluir Alerta";
}

<h1>Excluir Alerta</h1>

<h3>Tem certeza que deseja excluir este alerta?</h3>
<div>
    <h4>Alerta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alerta.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alerta.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alerta.Mensagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alerta.Mensagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alerta.NivelUrgencia)
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Alerta.NivelUrgencia switch {
                "baixo" => "bg-success",
                "medio" => "bg-warning",
                "alto" => "bg-danger",
                "critico" => "bg-dark",
                _ => "bg-secondary"
            })">
                @Model.Alerta.NivelUrgencia.ToUpper()
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alerta.DataEmissao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alerta.DataEmissao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alerta.Fonte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alerta.Fonte)
        </dd>
        @if (Model.Alerta.Ocorrencia != null)
        {
            <dt class="col-sm-2">
                Ocorrência
            </dt>
            <dd class="col-sm-10">
                @Model.Alerta.Ocorrencia.Descricao
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Alerta.IdAlerta" />
        <a asp-page="./Edit" asp-route-id="@Model.Alerta.IdAlerta" class="btn btn-secondary">Cancelar</a>
        <input type="submit" value="Excluir" class="btn btn-danger" onclick="return confirm('Confirma a exclusão deste alerta?')" />
    </form>
</div>